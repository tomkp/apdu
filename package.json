{
  "name": "apdu",
  "version": "0.0.5",
  "description": "Lightweight library for constructing APDU commands for smart card communication (ISO 7816-4)",
  "keywords": [
    "apdu",
    "smart-card",
    "smartcard",
    "iso-7816",
    "nfc",
    "pcsc",
    "contactless"
  ],
  "type": "module",
  "main": "lib/apdu.js",
  "types": "src/apdu.d.ts",
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "compile": "babel -d lib/ src/",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "prepublishOnly": "npm run compile",
    "release:patch": "npm run compile && npm version patch && git push && npm publish"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/tomkp/apdu.git"
  },
  "author": "tom@tomkp.com",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/tomkp/apdu/issues"
  },
  "homepage": "https://github.com/tomkp/apdu",
  "devDependencies": {
    "@babel/cli": "^7.26.4",
    "@babel/core": "^7.26.0",
    "@babel/preset-env": "^7.26.0",
    "@eslint/js": "^9.39.2",
    "@types/node": "^25.0.3",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "globals": "^16.5.0",
    "prettier": "^3.7.4",
    "typescript": "^5.9.3",
    "vitest": "^4.0.16"
  }
}
